{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist/cjs",
    "jsx": "react",
    "declaration": true,
    "emitDeclarationOnly": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
